{
  "name": "bpla",
  "version": "0.1.0",
  "description": "BPLA Application",
  "author": "Your Name <your.email@example.com>",
  "main": "electron/main.js",
  "homepage": ".",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "asar": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "fs": "^0.0.1-security",
    "mammoth": "^1.9.0",
    "path": "^0.12.7",
    "pouchdb": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.4",
    "react-router-dom": "^7.1.4",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && copy electron\\main.js build\\electron.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "electron-builder",
    "preelectron-build": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf release dist node_modules package-lock.json"
  },
  "build": {
    "appId": "com.yourcompany.bpla",
    "productName": "BPLA App",
    "copyright": "Copyright Â© 2023 Your Company",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "electron/",
        "to": "electron/"
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.1",
    "wait-on": "^8.0.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
